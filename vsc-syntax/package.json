{
	"name": "amber-language",
	"displayName": "Amber Language",
	"description": "Amber language support",
	"version": "1.2.6",
	"publisher": "Ph0enixKM",
	"engines": {
		"vscode": "^1.28.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ph0enixKM/Amber.git"
	},
	"author": "Paweł Karaś",
	"categories": [
		"Programming Languages"
	],
	"icon": "images/icon.png",
	"contributes": {
		"languages": [
			{
				"id": "amber",
				"aliases": [
					"Amber",
					"amber"
				],
				"extensions": [
					".amber",
					".ab"
				],
				"icon": {
					"dark": "images/file-icon.png",
					"light": "images/file-icon.png"
				},
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "amber",
				"scopeName": "source.amber",
				"path": "./syntaxes/amber.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "amber",
				"path": "./snippets/snippets.json"
			}
		]
	}
}