{
	"name": "amberscript-language",
	"displayName": "AmberScript Language",
	"description": "AmberScript language support",
	"version": "1.1.0",
	"publisher": "Ph0enixKM",
	"engines": {
		"vscode": "^1.28.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ph0enixKM/AmberScript.git"
	},
	"author": "Phoenix Arts (Paweł Karaś)",
	"categories": [
		"Programming Languages"
	],
	"icon": "images/icon.png",
	"contributes": {
		"languages": [
			{
				"id": "amberscript",
				"aliases": [
					"AmberScript",
					"amberscript"
				],
				"extensions": [
					".as",
					".ams",
					".amber"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "amberscript",
				"scopeName": "source.amberscript",
				"path": "./syntaxes/amberscript.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "amberscript",
				"path": "./snippets/snippets.json"
			}
		]
	}
}