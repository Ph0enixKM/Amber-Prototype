{
	"name": "amber-language",
	"displayName": "Amber Language",
	"description": "Amber language support",
	"version": "1.2.0",
	"publisher": "Ph0enixKM",
	"engines": {
		"vscode": "^1.28.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ph0enixKM/AmberScript.git"
	},
	"author": "Phoenix Arts (Paweł Karaś)",
	"categories": [
		"Programming Languages"
	],
	"icon": "images/icon.png",
	"contributes": {
		"languages": [
			{
				"id": "amber",
				"aliases": [
					"Amber",
					"amber"
				],
				"extensions": [
					".amber"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "amber",
				"scopeName": "source.amber",
				"path": "./syntaxes/amber.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "amber",
				"path": "./snippets/snippets.json"
			}
		]
	}
}